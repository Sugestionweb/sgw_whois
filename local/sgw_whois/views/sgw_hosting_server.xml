<?xml version="1.0"?>
<odoo>
	<!-- Servers Tree View -->
	<record model="ir.ui.view" id="view_sgw_server_tree">
		<field name="name">sgw_hosting.server.tree</field>
		<field name="model">sgw.server</field>
		<field name="arch" type="xml">
			<tree string="Servers" colors="red:to_delete_reuse==True">
				<field name="active" />
				<field name="host_name" />
				<field name="name" />
				<field name="supplier" />
				<field name="monthly_cost" sum="Total Monthly" />
				<field name="services_number" sum="Total Services" />
				<field name="services_amount_monthly" sum="Total Monthly" />
				<field name="services_amount_net_monthly" sum="Net Monthly" />
				<field name="to_delete_reuse" />
			</tree>
		</field>
	</record>

	<!-- Servers Form View -->
	<record model="ir.ui.view" id="view_sgw_server_form">
		<field name="name">sgw_hosting.server.form</field>
		<field name="model">sgw.server</field>
		<field name="arch" type="xml">
			<form string="Server">
				<header>
					<!--buttons here! -->
				</header>
				<sheet>
					<group name="group_top">
						<group name="group_left">
							<field name="name" />
							<field name="host_name" />
							<field name="active" />
							<field name="operating_system_id"></field>
							<field name="control_panel_visible"></field>
							<field name="control_panel"></field>
							<field name="control_panel_url" widget="url"></field>
						</group>
						<group name="group_left">
							<field name="product_id"></field>
							<field name="standard_price" readonly="1"></field>
							<field name="total_price_server" readonly="1" />
							<field name="calculate_monthly_cost" />
							<field name="monthly_cost" readonly="1" />
							<field name="to_delete_reuse" />
						</group>
					</group>
					<group name="group_bottom">
						<notebook>
							<page string="IP addresses">
								<field name="ip_ids">
									<tree string="IPs Lines" editable="bottom">
										<field name="server_id" invisible="1" />
										<field name="is_original_ip" />
										<field name="ip_address" />
										<field name="name" />
										<field name="reverse_dns" />
										<field name="product_id" />
										<field name="type_movable" />
										<field name="standard_price" />
									</tree>
								</field>
							</page>
							<page string="Extras">
								<field name="extra_ids">
									<tree string="Extras" editable="bottom">
										<field name="server_id" invisible="1" />
										<field name="name" />
										<field name="product_id" />
										<field name="standard_price" />
									</tree>
								</field>
							</page>
							<page string="Supplier data">
								<group name="supplier_data">
									<field name="supplier"></field>
									<field name="api_vps"
										attrs="{'invisible': [('api_cloud','=',True)]}"></field>
									<field name="api_cloud"
										attrs="{'invisible': [('api_vps','=',True)]}"></field>
									<field name="api_servicename"
										attrs="{'invisible': [('api_vps','=',True)]}"></field>
									<field name="api_instanceid"
										attrs="{'invisible': [('api_vps','=',True)]}"></field>
									<field name="supplier_name"
										attrs="{'invisible': [('api_cloud','=',True)]}"></field>
								</group>
								<group name="Api">
									<field name="data_raw_server"></field>
								</group>
							</page>
							<page string="Periodical purchases">
								<group name="periodical_purchases">
									<field name="date_registration"></field>
									<field name="generate_recurrent_purchases"></field>
									<field name="date_next_payment"></field>
									<field name="period_id"></field>
								</group>
							</page>
							<page string="Description">
								<field name="description"></field>
							</page>
							<page string="Services">
								<group name="services_resume">
									<field name="services_number" />
									<field name="services_amount_monthly" />
								</group>
								<field name="service_lines_ids"> 
									<tree string="Service lines"> 
										<field name="active"/> 
										<field name="product_id"/> 
										<field name="additional_description"/> 
										<field name="quantity"/> 
										<field name="discount"/> 
										<field name="ordering_interval"/> 
										<field name="ordering_unit"/> 
									</tree> 
								</field>
							</page>
						</notebook>
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>
