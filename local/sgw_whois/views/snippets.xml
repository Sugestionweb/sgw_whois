<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="snippet_referenceslinux" name="referenceslinux">
		<section class="s_references">
			<div class="container">
				<div class="row justify-content-center padding">
					<div class="col-md-8 ftco-animate fadeInUp ftco-animated">
						<form role="form" id="form_whois" name="form_whois"	t-attf-action="/whois{{ '?debug=assets' if debug else '' }}"
					method="post" onsubmit="this.action = this.action + location.hash;" class="domain-form">
							<div class="form-group d-md-flex"> 
								<input type="text" name="domain" t-att-value="domain" id="domain" required="required" autofocus="autofocus" autocapitalize="off" class="form-control px-4" placeholder="Enter your domain name..."/> 
								<input type="submit" class="search-domain btn btn-primary px-5" value="Search Domain"/> 
							</div>
							<input type="hidden" name="csrf_token"
							t-att-value="request.csrf_token()" />
						</form>
						<p class="domain-price text-center"><span><small>.com</small>10.75</span> <span><small>.net</small>19.90</span> <span><small>.biz</small>$5.95</span> <span><small>.gov</small>$3.95</span></p>
					</div>
				</div>
			</div>
		</section>
	</template>
	<template id="place_into_bar" inherit_id="website.snippets"
		name="Place into bar">
		<xpath
			expr="//div[@id='snippet_content']/div[@class='o_panel_body']"
			position="inside">
			<t t-snippet="sgw_whois.snippet_referenceslinux"
				t-thumbnail="/sgw_whois/static/images/snippets_thumbs/caraclist1box.jpg" />
		</xpath>
	</template>
</odoo>
