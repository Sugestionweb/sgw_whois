	<!-- IPs Tree View -->
	<record model="ir.ui.view" id="view_sgw_ipaddress_tree">
		<field name="name">sgw.ipaddress.tree</field>
		<field name="model">sgw.ipaddress</field>
		<field name="arch" type="xml">
			<tree string="IP addresses"
				colors="blue:is_original_ip==True;red:to_delete_reuse==True">
				<field name="server_id" />
				<field name="active" />
				<field name="operating_system" />
				<field name="ip_address" />
				<field name="is_original_ip" />
				<field name="type_movable" />
				<field name="supplier_name"></field>
				<field name="name" />
				<field name="reverse_dns" />
				<field name="to_delete_reuse" />
			</tree>
		</field>
	</record>

