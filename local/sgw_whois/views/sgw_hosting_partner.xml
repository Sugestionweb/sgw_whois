<?xml version="1.0"?>
<odoo>
	<!-- Modify view Partner Form -->
	<record model="ir.ui.view" id="view_partner_form">
		<field name="name">Extension</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="arch" type="xml">
			<notebook position="inside">
				<page string="Recurring Orders"
					attrs="{'invisible': [('supplier', '=', True),('customer', '=', False)]}">
					<field name="service_ids">
						<tree string="Agreement lines">
							<field name="name"></field>
							<field name="number"></field>
							<field name="active"></field>
							<field name="start_date"></field>
							<field name="prolong"></field>
							<field name="prolong_interval"></field>
							<field name="prolong_unit"></field>
							<field name="next_expiration_date"></field>
							<field name="state"></field>
<!-- 							<field name="renewal_state"></field> -->
						</tree>
					</field>
				</page>
				<page string="Domain Provider"
					attrs="{'invisible': [('supplier', '=', False),('customer', '=', True)]}">
					<group>
						<field name="domain_provider"></field>
						<field name="sgw_domains"
							attrs="{'invisible': [('domain_provider', '=', False)]}">
							<tree string="Domains">
								<field name="name" />
								<field name="service_id" />
								<field name="additional_description" />
								<field name="domain_cost" sum="Total Yearly" />
								<field name="domain_sale_price" sum="Total Yearly" />
								<field name="domain_net_amount_yearly" sum="Total Yearly" />
								<field name="domain_net_amount_monthly"
									sum="Total Monthly" />
							</tree>
						</field>
					</group>
				</page>
			</notebook>
			
		</field>
	</record>
</odoo>